.banner_content {
  position: absolute;
  height: 75px;
  bottom: 0;
  width: 100%;
  /* background: #ccc; */
   background: rgb(101, 105, 107); 
   opacity: 0.8;
   color: #fff;
   display: flex;
   align-items: center;
}
.banner_title {
  width: 550rpx;
  padding-left:30rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2; /*设置超出两行进行隐藏*/
}
.banner_zank {
  width:150rpx;
  color: #fff;
  background: #f7b500;
  border-radius: 10%;
  height: 60rpx;
  text-align: center; 
}
.detail_sort {
  min-height: 270rpx;
  width: 100%;
  padding: 30rpx 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.detail_num {
  width: 70px;
  height: 50rpx;
  display: inline-block;
  border: 1px solid #f5f5f5;
  background: #fff;
  color: #333;
  margin-right: 40rpx;
  margin-bottom: 20rpx;
  border-radius: 5rpx;
  text-align: center;
}
