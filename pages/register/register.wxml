<view class="main">
  <view class="box">
    <view class="box-content">
      <view class="box-content-view">
        <input type="text" type="number" bindinput="phoneInput" placeholder="手机号"/>
      </view>
    </view>
    <view class="box-content">
      <view class="box-content-view">
        <input type="text" placeholder="密码" bindinput="passwordInput" />
      </view>
    </view>
    <view class="box-content">
      <button class="box-content-button" bindtap="clickRegister">注册</button>
    </view>
    <view class="box-content">
      <text class="box-content-register" bindtap="clickLogin">已有账号，马上登录</text>
    </view>
  </view>
</view>
<view class="tip-view">注册即是代表已阅读并同意<text>用户协议</text></view>
