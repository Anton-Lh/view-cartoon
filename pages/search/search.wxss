/* pages/search/search.wxss */
page{
  background-color: #f5f5f5;
}
.search{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  padding-top: 5rpx;
  background-color: #fff;
}
.search-box{
  width: 70%;
  height: 75rpx;
  display: flex;
  align-items: center;
  border: 1px solid rgb(184, 184, 184);
  border-radius: 18rpx;
}
.search-box-input{
  width: 90%;
  height: 99%;
  padding-left: 15rpx;
}
.quxiao{
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: gray;
}
.show{
  margin-top: 8rpx;

}
/* 结果 */
.main{
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 20px;
  /* justify-content: space-between; */
}
.main-box{
  height: 300rpx;
  margin-top: 30rpx;
  background-color: white;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.main-box-image{
  width: 100%;
  height: 75%;
}
.main-box-text{
  height: 25%;
  color: #a7a7a7;
  font-size: 28rpx;
  margin-top: 10rpx;
  margin-left: 12rpx;
}