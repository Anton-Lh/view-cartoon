/* pages/search/search.wxss */
.search{
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: center;
  margin-top: 5rpx;
}
.search-box{
  width: 70%;
  height: 100%;
  display: flex;
  align-items: center;
  border: 1px solid rgb(184, 184, 184);
  border-radius: 18rpx;
}
.quxiao{
  width: 20%;
  height: 100%;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
  color: gray;
}
.show{
  margin-top: 8rpx;

}
/* 结果 */
.main{
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 20px;
  /* justify-content: space-between; */
}
.main-box{
  height: 300rpx;
  margin-top: 30rpx;
  background-color: white;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.main-box-image{
  width: 100%;
  height: 75%;
}
.main-box-text{
  color: #a7a7a7;
  font-size: 28rpx;
  margin-top: 16rpx;
  margin-left: 22rpx;
}